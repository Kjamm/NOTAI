<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- 파란색 왼쪽 선 -->
    <item android:width="4dp" android:gravity="left">
        <shape android:shape="rectangle">
            <solid android:color="@color/blue_90"/> <!-- 파란색 선 색상 -->
        </shape>
    </item>

    <!-- 전체 배경 (옅은 파란색) -->
    <item android:left="4dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/light_blue_10"/> <!-- 옅은 파란색 배경 -->
        </shape>
    </item>

</layer-list>
