<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 투명한 배경 설정 -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent"/> <!-- 투명한 배경 -->
        </shape>
    </item>

    <!-- 아래쪽 1dp 테두리만 설정 -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/grey_20"/> <!-- 아래쪽 테두리 색상 -->
            <size android:height="1dp"/> <!-- 테두리 두께를 설정 -->
        </shape>
    </item>
</layer-list>
