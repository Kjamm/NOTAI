<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context=".sample.ComponentSampleActivity">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <include layout="@layout/file_item_layout" />

        <include layout="@layout/add_file_layout" />

        <include layout="@layout/folder_item_layout" />
    </LinearLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="20dp" />

    <include layout="@layout/stt_box_layout" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="20dp" />

    <include layout="@layout/card_layout" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="20dp" />

    <include layout="@layout/section_title_layout" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="20dp" />

    <include layout="@layout/file_title_editable_layout" />

    <include layout="@layout/nav_item"/>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/slider_selector"/>




</LinearLayout>